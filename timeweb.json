{
  "name": "latar-backend",
  "type": "docker",
  "dockerfile": "Dockerfile",
  "environment": {
    "NODE_ENV": "production",
    "PORT": "3001",
    "SCRIBBLE_DIFFUSION_API_KEY": "YOUR_SCRIBBLE_DIFFUSION_API_KEY_HERE"
  },
  "server": {
    "port": 3001,
    "health_check": "/healthz"
  },
  "resources": {
    "memory": "1024MB",
    "cpu": 1.0
  },
  "network": {
    "allow_internet": true,
    "allow_internal": true
  }
}
